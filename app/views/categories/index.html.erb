<h1 align="center">Listing all categories</h1>

<div align="center">
  <% @categories.each do |category|%>
    <ul>
      <li class="category-name">
        <%= link_to "#{category.name}", category_path(category)%>
        <li><small><%= pluralize(category.articles.count, "article") %></small></li>
      </li>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>