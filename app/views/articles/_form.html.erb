<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  </head>
  
  <div id="Form">
    <% if @article.errors.any? %>
      <h2>The following errors prevented article from being created</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    <% end %>
    
    <%= form_for @article do|f| %>
    
      <%= f.label :title, id: 'title-label' %>
      <%= f.text_field :title, id: 'title-content' %></br></br>
       
      <%= f.label :description, id: 'desc-label' %><br>
      <%= f.text_area :description, id: 'desc-content' %></br></br>
      
      <%= f.submit %>
      
    <% end %>
   </div>
</html>