<div>
  <% @users.each do |user| %>
      <div class="row">
        <div class="col-xs-12">
          <div class="well well-lg col-xs-8 col-xs-offset-2 user-block">
            <div class="avatar">
              <%=link_to gravatar_for(user), user_path(user) %>
            </div>
            <div>
              <%=link_to user.username, user_path(user), class: 'name' %><br>
              <%= pluralize(user.articles.count, "Article") if user.articles %>
              <% if logged_in? && current_user.admin? %>
                <br><br>
                <%= link_to "Delete", user_path(user), method: :delete,
                data: {confirm: "Are you sure you want to delete this user and all their articles"}, class: 'btn btn-xs btn-danger article-btn' %>
              <% end %>
            </div>
          </div>
          
        <div class="row">
          <div class="col-xs-4 col-xs-offset-4">
            <%= will_paginate %>
          </div>
        </div>
  <% end %>
</div>